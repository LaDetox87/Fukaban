{% extends 'base.html.twig' %}

{% block title %}Taches{% endblock %}

{% block body %}
    <h1>Taches</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tach.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ tach.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ tach.description }}</td>
            </tr>
            <tr>
                <th>Date_creation</th>
                <td>{{ tach.dateCreation ? tach.dateCreation|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date_fin</th>
                <td>{{ tach.dateFin ? tach.dateFin|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="/projets/{{tach.getIdProjet().getId()}}/task"> back to list </a>

    <a href="{{ path('app_taches_edit', {'id': tach.id}) }}">edit</a>

    {{ include('taches/_delete_form.html.twig') }}
{% endblock %}
